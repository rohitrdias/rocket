	<section id="contact-page">
            <div class="container">
                <div class="center">   
                <br>     
                    <h2>Drop Your Message !</h2>
                </div> 

        <%= form_for @message, url:contact_path, :html => {:id => "new_message"} do |message_form| %>

         <div class="col-xs-6"> 
        <h4>Please feel free to use our contact form for any kind of enquiry.</h4><br><br>
        <div class="row">
          <div class="col-lg-10">
            <div class="form-group field-contactform-name required">
              <label class="control-label">Full Name <span>*</span></label>
              <%= message_form.text_field :name, placeholder: "Name", :class=>"form-control" ,:required => true%>
             </div>

            <div class="form-group field-contactform-name required">
              <label class="control-label required">Email Address <span>*</span></label>
              <%= message_form.text_field :email, placeholder: "Email", :class=>"form-control",:required => true %>
            </div>

            <div class="form-group field-contactform-name">
              <label class="control-label">Phone No.<span> *</span></label>
              <%= message_form.text_field :phone, placeholder: "Phone No.", :class=>"form-control",:required => true %>
            </div>

             <div class="form-group field-contactform-name">
              <label class="control-label">Company Name</label>
              <%= message_form.text_field :companyname, placeholder: "Company Name", :class=>"form-control" %>
             </div>

           <div class="form-group field-contactform-name">
              <label class="control-label">Subject <span>*</span></label>
              <%= message_form.text_field :subject, placeholder: "Subject", :class=>"form-control",:required => true %>
           </div>

            <div class="form-group field-contactform-body">
              <label for="contactform-body" class="control-label">Message <span>*</span></label>
              <%= message_form.text_area :message, placeholder: "Message", :class=>"form-control" ,:rows=>"5",:required => true%>
            </div>

            <div class="form-group field-contactform-verifycode">
              <p class="help-block help-block-error"></p>
            </div>                        
            <div class="form-group">
              <!-- <button name="contact-button" class="btn btn-primary" type="submit">Submit</button> -->
              <%= message_form.submit "Submit", :class=>"btn btn-primary", :id=>"submit"%> 

            </div>
         </div>
        </div>
        </div>
        <div class="col-xs-6">
        <br>
        <div id="mapid" class="map leaflet-container leaflet-fade-anim leaflet-grab leaflet-touch-drag">
  
        </div>
       <%= javascript_include_tag "/assets/easy-button" %>
       <%= javascript_include_tag "/assets/leaflet_map" %>

         <h4>Address:</h4><br>
